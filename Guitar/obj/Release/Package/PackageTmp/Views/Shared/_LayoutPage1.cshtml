<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
        @Styles.Render("~/Content/css")
        @*<a href="~/Views/Shared/_LayoutPage1.cshtml">~/Views/Shared/_LayoutPage1.cshtml</a>*@
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bootstrap-3.3.7-dist/css/bootstrap.min.css")
    @Scripts.Render("~/bootstrap-3.3.7-dist/js/bootstrap.min.js")
    @Styles.Render("~/font-awesome-4.7.0/css/font-awesome.min.css")
    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
    <style type="text/css">
        .navbar .nav > li .dropdown-menu {
            margin: 0;
        }

        .navbar .nav > li:hover .dropdown-menu {
            display: block;
        }

        .headimg .userin {
            height:200px;
            display: none;
            float:left;
            position: absolute;
            /*right: 12%;*/
            width: 200px;
            border: none;
            background-color:#E7EFF3;
            overflow:visible;
            margin-left: -100px;
            width: 240px;
            padding: 20px 0 0;
            background: #fff;
            -webkit-box-shadow: rgba(0,0,0,.16) 0 2px 4px;
            box-shadow: 0 2px 4px rgba(0,0,0,.16);
            border-radius: 0 0 4px 4px;
            line-height: normal;
        }
        .userin a{
            text-decoration:none;
            color:#090808;
        }
        .listall{
            width:100%;
            height:20px;
            margin: 14px 9px;
        }
        .listall a{
            font-size:15px;
        }
        .footuse{
            width:90%;
            padding-top:10px;
        }
        .footuse a{
            float:right;
            padding-right:10px;
        }
        .footbtn{
            margin:10px 0;
            float:right;
        }
        .headimg a:hover {
            margin: 0;
        }

        .headimg:hover .userin {
            display: block;
        }
        .name{
            text-align:center;
            width:100%;
            height:30px;
            font-size:20px;
        }
        .name a{
            text-decoration:none;
        }
        .use{
            width:100%;
            padding-top:10px;
        }
       
        .footer{
            background: #efefef;
        }
        .fo{
            clear:both;
            margin-top:30px;
        }
        .fo-left{
            width:55%;
            float:left;
        }
        .aboutus{

            width:100%;
            padding-bottom:30px;
        }
        .abouthead{
            font-size:20px;
            text-decoration:none;
            color:#808080;
        }
        .aboutlist{
            margin:10px 0px;

        }
        .aboutlist a{
            cursor:pointer;
            text-decoration:none;
            font-size:15px;
            padding-right: 30px;
            color:#181717;
        }
        .fo-right{
            float:left;
        }
        .ico{
            width:6%;
            float:left;
            margin-right:30px;
        }
        .ico img:hover{
            opacity:0.7;
        }
        .copyright{
            clear:both;
            width:100%;
            text-align:center;
            font-size:15px;
            padding:30px 0px;
            color:#B8B0B0;
        }
        .navfont a{
            font-size:15px;
            color:#000000;
        }

        .weixin{  height:50px;position:relative; font-size:12px; text-align:center;}
.weixin a{height:50px; display:block; position:absolute; left:0; top:0;/*background:url(../../Images/weixin.png) no-repeat center top;*/ }
.weixin .weixin_nr{width:120px; height:140px; padding:10px; background:#fff; text-align:center; position:absolute; left:-45px; top:45px; display:none;}
.weixin .weixin_nr img{ margin-bottom:5px;}
.weixin .weixin_nr .arrow{ width:0; height:0; border-bottom:10px solid #fff;border-left:10px solid transparent;border-right:10px solid transparent; position:absolute; left:50px; top:-10px;}
.weixin.on .weixin_nr{ display:block;}
/*.weixin.on a{ background:url(../../Images/weixin.png) no-repeat left bottom;}*/
    </style>
    <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Guitar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-size:30px;color:#84B9EF" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="navfont">@Html.ActionLink("主页", "Index", "Home")</li>
                    <li class="dropdown navfont">
                        @Html.ActionLink("乐谱", "Index", "MusicScore")
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("热门谱子", "Contact", "Home")</li>
                            <li>@Html.ActionLink("最新谱子", "Contact", "Home")</li>
                            <li>@Html.ActionLink("热门关注", "Contact", "Home")</li>
                        </ul>
                    </li>
                    <li class="navfont">@Html.ActionLink("视频", "About", "Home")</li>
                    <li class="navfont">@Html.ActionLink("攻略", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </li>
                    <li class="dropdown">
                        @Html.ActionLink("发布乐谱", "Contact", "Home", new { @class = "navbar-brand", @style = "font-size:15px;color:#C00000;" })
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("发布乐谱", "Create", "MusicScore")</li>
                            <li>@Html.ActionLink("发布视频", "Create", "Video")</li>
                            <li>@Html.ActionLink("发布帖子", "Create", "Posts")</li>
                        </ul>
                    </li>
                </ul>


                @if (Session["User_name"] != null)
                {
                    using (Html.BeginForm("LogOff", "LoginRegister", FormMethod.Post, new { id = "logoutForm", @class = "navbar-form navbar-right" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="headimg">
                            <a><img src="@Session["User_img"]" class="img-circle img-responsive" style="height:34px;width:34px;" /></a>
                            <div class="userin">
                                <div class="name"><a>[@Session["User_name"]]</a></div>
                                <div class="use">
                                    <div class="list-left" style="width:50%; float:left;">
                                       <div class="listall"><a href="#"><i class="fa fa-user-o fa-fw"></i> 我的空间</a></div> 
                                       <div class="listall"> <a href="#"><i class="fa fa-music fa-fw"></i> 我的乐谱</a></div>
                                    </div>
                                    <div class="list-left" style="width:50%; float:left;">
                                        <div class="listall"><a href="#"><i class="fa fa-file-text-o fa-fw"></i> 发布管理</a></div>
                                        <div class="listall"><a href="#"><i class="fa fa-cog fa-fw"></i> 设置中心</a></div>
                                            </div>
                                </div>
                                <div class="footuse">
                                    @*<a>退出</a>*@
                                    <div class="footbtn"><input type="submit" value="退出" class="btn btn-info" /></div>
                                    
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("注册", "Register", "LoginRegister", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("登录", "Login", "LoginRegister", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    </ul>
                }

                @using (Html.BeginForm("Index", "Search", FormMethod.Post, new { id = "search", @class = "navbar-form navbar-right" }))
                {
                    <div class="input-group">

                        <input type="text" class="form-control" placeholder="搜乐谱,视频..." style="border:none" />@*<i class="fa fa-search fa-2x" aria-hidden="true"></i>*@
                        @*<input type="submit" value="search" />*@
                        <span class="input-group-addon" style="border:none"><i class="fa fa-search" aria-hidden="true"></i></span>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                }

            </div>

        </div>
    </div>

        @RenderBody()
        <hr />


    <div class="footer">
        <div class="container" >
            <div class="fo">
                <div class="fo-left">
                    <div class="aboutus">
                        <div class="abouthead">关于我们</div>
                        <div class="aboutlist">
                            <a>关于我们</a>
                            <a>联系我们</a>
                            <a>您的建议</a>
                            <a>免责声明</a>
                        </div>
                    </div>
                    <div class="aboutus" style="height:80px;">
                        <div class="ico">
                            <img class="img-responsive" src="~/Images/手机.png" />
                        </div>
                        <div class="ico">
                            <img class="img-responsive" src="~/Images/qq.png" />
                        </div>
                        <div class="ico">
                            @*<img class="img-responsive" src="~/Images/微信.png" />*@
                            <div class="weixin" onmouseover="this.className = 'weixin on';" onmouseout="this.className = 'weixin';">
                                <a href="javascript:;"><img class="img-responsive" src="~/Images/微信.png" /></a>
                                <div class="weixin_nr">
                                    <div class="arrow"></div>
                                    <img src="~/Images/weixin.jpg" width="100" height="100" />
                                    关注官方微信
                                </div>
                            </div>
                        </div>
                        <div class="ico">
                            <img class="img-responsive" src="~/Images/微博.png" />
                        </div>
                    </div>

                    <div class="aboutus">
                        <div class="abouthead">友情链接</div>
                        <div class="aboutlist">
                            <a>弹吉吧</a>
                            <a>音乐人网</a>
                            <a>找歌谱网</a>
                            <a>吉他堂</a>
                            <a>音乐之家</a>
                            <a>17吉他网</a>
                        </div>
                    </div>
                </div>
                <div class="fo-right">
                    <img class="img-responsive" src="~/Images/jtb.gif" border="0">
                </div>
            </div>
            
            <div class="copyright">
                Copyright © 2016 江西师范大学 All Rights Reserved | 赣 18702515413
            </div>
        </div>
    </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
</html>
