
@model IEnumerable<Guitar.Models.Users>

@{
    ViewBag.Title = "MyGuanzhu";
    Layout = "~/Views/Shared/_UserCenter.cshtml";
}
        <style>
            #myguanzhu {
                background-color: #00a1d6;
            }

            .guan {
                margin: 20px;
            }
             .biaoqian{
            width:100%;
            height:55px;
            margin:15px;
        }
        .biao{
            float:left;
            width:55px;
        }
        .qian{
            float:left;
            width:50%;
            font-size:x-large;
            padding-top:14px;
            height:50px;
        }
        </style>
        <div class="biaoqian">

    <div class="biao">  <img src="~/Images/关注4.png" width="50" height="50" /></div>
    <div class="qian">
        我的关注
    </div>
</div>
        <div class="guan">
            <div class="row">
                @foreach (var p in Model)
                {
                    <div class="col-sm-6 col-md-3">
                        <div class="thumbnail">
                         <a href="@Url.Action("Index","Users", new { id = @p.User_id})"><img src="@p.User_img" alt="通用的占位符缩略图"></a>   
                            <div class="caption">
                                <h3>@p.User_name</h3>
                            </div>
                        </div>
                    </div>
                }
               
            </div>
        </div>

